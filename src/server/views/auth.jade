doctype html
html
  head
    title Garage Doors
    link(rel='stylesheet', href='/css/pure-min.css')
    link(rel='stylesheet', href='/css/frontend.css')
    script(src='/js/zepto.min.js')
    script(src='/js/auth.js')
  body
    div.auth
      h1 Authentication
      <h2>Authenticate with username and password</h2>
      form.auth
        input(type="input", placeholder="Username", name="username", required="required")
        input(type="input", placeholder="Password", name="password", required="required")
        div(class='garage-door-action')
          a(class='pure-button toggle-action') Login

      <hr />
      <h2>Or authenticate with QRCode token</h2>
      form.auth
        input(type="input", placeholder="QRCode token", name="username", required="required")
        div(class='garage-door-action')
          a(class='pure-button toggle-action') Login